# Dockerfile for MCP Odoo Server
# Based on the MCP server recommendations

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    httpx \
    starlette \
    uvicorn

# Create config directory
RUN mkdir -p /app/config

# Copy the simple MCP server
COPY simple-mcp-server.py /app/simple-mcp-server.py

# Copy configuration files
COPY mcp-config/ /app/config/

# Set environment variables
ENV PYTHONPATH=/app
ENV MCP_CONFIG_PATH=/app/config

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:3001/health')" || exit 1

# Run the simple MCP server
CMD ["python", "simple-mcp-server.py"]
